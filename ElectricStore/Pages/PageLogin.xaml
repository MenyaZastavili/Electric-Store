<Page x:Class="ElectricStore.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectricStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="PageLogin">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="200 -160 200 5" VerticalAlignment="Center">
            <TextBlock FontSize="14">Введите email:</TextBlock>
            <TextBox Height="30" VerticalAlignment="Center" Name="UserEmail"/>
        </StackPanel>
        <StackPanel Margin="200 -10 200 5" VerticalAlignment="Center">
            <TextBlock FontSize="14">Введите пароль:</TextBlock>
            <PasswordBox Height="30" VerticalAlignment="Center" Name="UserPassword"/>
        </StackPanel>

        <Button Height="30" Width="100" VerticalAlignment="Top" Margin="0 210 210 0" Background="LightBlue" Click="In_Click">Войти</Button>
        <Button Height="30" Width="150" VerticalAlignment="Top" Margin="0 210 -130 0" Background="CadetBlue" Click="Reg_Click">Регистрация</Button>
    </Grid>
</Page>
