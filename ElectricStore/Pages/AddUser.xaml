<Page x:Class="ElectricStore.Pages.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectricStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUser">

    <Grid Background="#fff">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" Margin="50 0">
            <Label>Введите имя пользователя:</Label>
            <TextBox Height="30" VerticalAlignment="Center" Name="UserName"></TextBox>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Margin="50 0" Grid.Row="1">
            <Label>Введите Email пользователя:</Label>
            <TextBox Height="30" VerticalAlignment="Center" Name="Email"></TextBox>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Margin="50 0" Grid.Row="2">
            <Label>Введите номер телефона пользователя:</Label>
            <TextBox Height="30" VerticalAlignment="Center" Name="PhoneNumber"></TextBox>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Margin="50 0" Grid.Row="3">
            <Label>Введите роль пользователя:</Label>
            <TextBox Height="30" VerticalAlignment="Center" Name="Role"></TextBox>
        </StackPanel>

        <Button Grid.Row="5" Height="40" Width="180" Background="Transparent" BorderBrush="Black" BorderThickness="2" Click="btnUser_Click">Добавить пользователя</Button>

    </Grid>
</Page>
